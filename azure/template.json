{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "container_registry_name": {
            "type": "String",
            "metadata": {
                "description": "Containter registry name must be globally unique"
            }
        },
        "container_registry_sku": {
            "type": "String",
            "defaultValue": "Basic",
            "metadata": {
                "description": "Containter registry name must be globally unique"
            }
        },
        "website_name": {
            "type": "String",
            "metadata": {
                "description": "Website name must be globally unique"
            }
        },
        "website_sku_tier": {
            "type": "string",
            "defaultValue": "F1",
            "allowedValues": [
                "Free",
                "Basic",
                "Standard",
                "Premium",
                "PremiumV2"
            ],
            "metadata": {
                "description": "Hosting plan's pricing tier. Check details at https://azure.microsoft.com/en-us/pricing/details/app-service/"
            }
        },
        "website_sku_capacity": {
            "type": "int",
            "defaultValue": 1,
            "minValue": 1,
            "metadata": {
                "description": "Hosting plan's instance count"
            }
        },
        "location": {
            "type": "string",
            "defaultValue": "[resourceGroup().location]",
            "metadata": {
                "description": "Location for all resources"
            }
        }
    },
    "variables": {
        "asp_name": "[concat(parameters('website_name'),'-asp')]"
    },
    "resources": [
        {
            "type": "Microsoft.ContainerRegistry/registries",
            "apiVersion": "2019-05-01",
            "name": "[parameters('container_registry_name')]",
            "location": "[parameters('location')]",
            "sku": {
                "name": "[parameters('container_registry_sku')]"
            },
            "properties": {
                "adminUserEnabled": false
            }
        },
        {
            "type": "Microsoft.Web/serverfarms",
            "apiVersion": "2019-08-01",
            "name": "[variables('asp_name')]",
            "location": "[parameters('location')]",
            "sku": {
                "tier": "[parameters('website_sku_tier')]",
                "capacity": "[parameters('website_sku_capacity')]"
            },
            "kind": "linux",
            "properties": {
                "name": "[variables('asp_name')]"
            }
        },
        {
            "type": "Microsoft.Web/sites",
            "apiVersion": "2018-11-01",
            "name": "[parameters('website_name')]",
            "location": "[parameters('location')]",
            "dependsOn": [
                "[resourceId('Microsoft.Web/serverfarms', variables('asp_name'))]"
            ],
            "kind": "app,linux,container",
            "properties": {
                "serverFarmId": "[resourceId('Microsoft.Web/serverfarms', variables('asp_name'))]",
                "httpsOnly": false
            }
       }
    ]
}